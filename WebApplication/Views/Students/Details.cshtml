@model WebApplication.Entities.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <div class="row">

        <div class="col-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Group)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Group.Name)
                </dd>
            </dl>
        </div>

        <div class="col-4">
            @if (ViewBag.Rating != null)
            {
            <span>Rating in a group: </span>@ViewBag.Rating
            }
        </div>

    </div>

    <h5 class="mt-2">Marks</h5>
    <div class="row">
        <div class="col-md-12">

            <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Teacher</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Marks.Count; i++)
                {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model.Marks[i].TeacherSubject.Subject.Name</td>
                    <td>@Model.Marks[i].TeacherSubject.Teacher.LastName 
                        @Model.Marks[i].TeacherSubject.Teacher.FirstName</td>
                    <td>@Model.Marks[i].Value</td>
                </tr>
                }
            </tbody>
        </table>

        </div>
    </div>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
